      }

      nav a {
        text-decoration: none;
        font-weight: bold;
        color: #444;
      }

      nav a:hover {
        color: #2575fc;
      }

      .dropdown {
        position: relative;
        cursor: pointer;
      }

      .dropdown span {
        font-weight: bold;
        color: #444;
      }

      .dropdown-content {
        display: none;
        position: absolute;
        top: 25px;
        left: 0;
        background: white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        min-width: 160px;
      }

      .dropdown-content a {
        display: block;
        padding: 8px;
        color: #333;
        text-align: left;
      }

      .dropdown-content a:hover {
        background: #f0f0f0;
      }

      .dropdown:hover .dropdown-content {
        display: block;
      }

      h1 {
        margin-bottom: 10px;
      }

      iframe {
        margin-top: 20px;
        border-radius: 10px;
      }

      img {
        margin-top: 20px;
        border-radius: 50%;
      }

      footer {
        margin-top: 40px;
        font-size: 14px;
        color: gray;
      }
    </style>
